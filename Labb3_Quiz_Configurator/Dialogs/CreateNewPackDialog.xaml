<Window x:Class="Labb3_Quiz_Configurator.Dialogs.CreateNewPackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_Quiz_Configurator.Dialogs"
        mc:Ignorable="d"
        Title="CreateNewPackDialog" Height="250" Width="200"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <Label Content="Pack Name:"/>
            <TextBox/>
            <Label Content="Difficulty:"/>
            <ComboBox>
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Hard"/>
            </ComboBox>
            <Label Content="Time Limit:"/>
            <Slider Minimum="5"
                    Maximum="120"
                    Value="30"
                    TickFrequency="5"
                    TickPlacement="BottomRight"
                    />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Cancel" Height="20" Width="50" Margin="10,10,10,10"/>
                <Button Content="Create" Height="20" Width="50" Margin="10,10,10,10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
